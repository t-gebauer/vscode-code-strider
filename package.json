{
    "name": "code-strider",
    "displayName": "Code Strider",
    "description": "Structured code navigation and editing",
    "publisher": "ttt",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.50.0"
    },
    "categories": ["Other"],
    "activationEvents": [
        "onLanguage:clojure",
        "onLanguage:fennel",
        "onLanguage:html",
        "onLanguage:python",
        "onLanguage:javascript",
        "onLanguage:typescript"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "code-strider:toggle-ast-viewer",
                "title": "code-strider: Toggle AST viewer"
            }
        ],
        "menus": {
            "commandPalette": [
                {
                    "command": "code-strider:toggle-ast-viewer",
                    "when": "code-strider:is-editor-active"
                }
            ]
        },
        "keybindings": [
            {
                "command": "code-strider:toggle-ast-viewer",
                "key": "alt-s alt-t",
                "when": "code-strider:is-editor-active"
            },
            {
                "command": "code-strider:show-log",
                "key": "alt-s alt-l",
                "when": "code-strider:is-editor-active"
            },
            {
                "command": "deleteLeft",
                "key": "backspace",
                "when": "editorTextFocus && code-strider:is-editor-active && !code-strider:is-insert-mode"
            },
            {
                "command": "code-strider:undo-edit",
                "key": "u",
                "when": "editorTextFocus && code-strider:is-editor-active && !code-strider:is-insert-mode"
            },
            {
                "command": "code-strider:back-to-previous-selection",
                "key": "b",
                "when": "editorTextFocus && code-strider:is-editor-active && !code-strider:is-insert-mode"
            },
            {
                "command": "code-strider:exit-insert-mode",
                "key": "Escape",
                "when": "editorTextFocus && !suggestWidgetVisible && code-strider:is-editor-active && code-strider:is-insert-mode"
            },
            {
                "command": "code-strider:move-up",
                "key": "k",
                "when": "editorTextFocus && code-strider:is-editor-active && !code-strider:is-insert-mode"
            },
            {
                "command": "code-strider:move-down",
                "key": "j",
                "when": "editorTextFocus && code-strider:is-editor-active && !code-strider:is-insert-mode"
            },
            {
                "command": "code-strider:move-left",
                "key": "h",
                "when": "editorTextFocus && code-strider:is-editor-active && !code-strider:is-insert-mode"
            },
            {
                "command": "code-strider:move-right",
                "key": "l",
                "when": "editorTextFocus && code-strider:is-editor-active && !code-strider:is-insert-mode"
            },
            {
                "~comment": "Follow the flow of the currently selected structure. Falls back to `first-child`",
                "command": "code-strider:follow-structure",
                "key": "f",
                "when": "editorTextFocus && code-strider:is-editor-active && !code-strider:is-insert-mode"
            }
        ],
        "languages": [
            {
                "id": "fennel",
                "extensions": [".fnl"],
                "aliases": ["Fennel", "fnl"]
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "lint": "eslint src --ext ts",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "test": "node ./out/test/runTest.js",
        "start": "codium --wait --disable-extensions --extensionDevelopmentPath $(pwd)"
    },
    "devDependencies": {
        "@alfonso-presa/soft-assert": "^0.5.0",
        "@types/chai": "^4.2.14",
        "@types/glob": "^7.1.3",
        "@types/mocha": "^8.0.0",
        "@types/node": "^12.11.7",
        "@types/vscode": "^1.50.0",
        "@typescript-eslint/eslint-plugin": "^4.1.1",
        "@typescript-eslint/parser": "^4.1.1",
        "chai": "^4.2.0",
        "eslint": "^7.9.0",
        "glob": "^7.1.6",
        "mocha": "^8.1.3",
        "prettier": "^2.2.1",
        "typescript": "^4.0.2",
        "vscode-test": "^1.4.0"
    },
    "dependencies": {
        "web-tree-sitter": "^0.17.1"
    }
}
